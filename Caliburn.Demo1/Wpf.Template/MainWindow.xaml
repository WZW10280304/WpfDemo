<Window x:Class="Wpf.Template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Template"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
        <Button Name="BtnDemo1" Content="Demo1" Click="BtnDemo1_Click"></Button>
        <Button Name="BtnDemo2" Content="Demo2" Click="BtnDemo2_Click"></Button>
        <Button Name="BtnDemo3" Content="Demo3" Click="BtnDemo3_Click"></Button>
    </StackPanel>
</Window>
