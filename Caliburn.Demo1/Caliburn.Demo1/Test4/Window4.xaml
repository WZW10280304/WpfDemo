<Window x:Class="Caliburn.Demo1.Test4.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caliburn.Demo1.Test4"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Window4" Height="500" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="MyTaskTemplate">
            <StackPanel>
                <Button Content="{Binding Name}" Command="{Binding OnCommand}" Width="200" Height="30" Margin="10"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="350" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Width="400" Margin="10" FontSize="16" FontStyle="Oblique">请选择您喜欢的球星：</Label>
        <ListBox Grid.Row="1" Width="400" Margin="10"
             ItemsSource="{Binding}"
             ItemTemplate="{StaticResource MyTaskTemplate}"/>
    </Grid>
</Window>
